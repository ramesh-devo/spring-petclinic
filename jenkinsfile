pipeline {
    agent { label 'jdk11-mvn3.8.4' }
    triggers { 
        cron('45 23 * * 1-5') 
        
    }
    stages {
        stage('scm') {
            steps {
               
               git url: 'https://github.com/ramesh-devo/spring-petclinic.git', branch: 'main'
            }

            } 
            stage('build') {
                steps {
                     withSonarQubeEnv(installationName: 'SONAR_9.2.2', envOnly: true, credentialsId: 'SONAR_TOKEN'){
                          sh "/usr/local/apache-maven-3.8.4/bin/mvn clean package sonar:sonar"
                     echo "${env.SONAR_HOST_URL}"
                     }
                    
                }
        
            }
            
    }
    
}